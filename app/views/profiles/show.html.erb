<div class='container ProfilePage'>
  <div class='row'>
    <div class='col-md-4'>
      <%= render 'profiles/left_menu' %>
    </div>
    <div class='col-md-8'>
      <div class="panel">
        <div class="panel-header">
          <p class="panel-header-title">Datos personales</p>
        </div>
        <div class="panel-body">
          <%= form_for current_user do |f| %>
            <div class='row'>
              <div class='col-md-6'>
                <div class="contentInput margin-top-15 ">
                  <label class="label">Email:</label>
                  <%= f.text_field :email, class: 'input' %>
                </div>
              </div>
              <div class='col-md-6'>
                <div class="contentInput margin-top-15 ">
                  <label class="label">Contrase√±a:</label>
                  <%= f.password_field :password, class: 'input' %>
                </div>
              </div>
              <div class='col-md-12 '>
                <div class='margin-top-30 contentButtons contentButtonsEnd'>
                  <%= f.submit 'Actualizar', class: 'button'%>
                </div>
              </div>
            </div>
          <% end %>
          <%= form_for current_user.person, url: profile_path, :method => "put" do |f| %>
            <div class='row'>
              <div class='col-12 '>
                <div class="contentInput margin-top-15 ">
                  <label class="label">Nombre:</label>
                  <%= f.text_field :first_name, class: 'input' %>
                </div>
              </div>
              <div class='col-12'>
                <div class="contentInput margin-top-15 ">
                  <label class="label">Apellidos:</label>
                  <%= f.text_field :last_name, class: 'input' %>
                </div>
              </div>
              <div class='col-12'>
                <div class="contentInput margin-top-15 ">
                  <label class="label">Dni:</label>
                  <%= f.text_field :dni, class: 'input' %>
                </div>
              </div>
              <div class='col-12'>
                <div class="contentInput margin-top-15 ">
                  <label class="label">Celular:</label>
                  <%= f.text_field :phone, class: 'input' %>
                </div>
              </div>
              <div class='col-12'>
                <div class="contentInput margin-top-15 ">
                  <label class="label">Departamento:</label>
                  <%= f.select :department_id, @departments, class: 'input', include_blank: 'Selecciona departamento' %>
                </div>
              </div>
              <div class='col-12'>
                <div class="contentInput margin-top-15 ">
                  <label class="label">Provincia:</label>
                  <%= f.select :province_id, [], class: 'input', include_blank: 'Selecciona provincia' %>
                </div>
              </div>
              <div class='col-12'>
                <div class="contentInput margin-top-15 ">
                  <label class="label">Distrito:</label>
                  <%= f.select :district_id, [], class: 'input', include_blank: 'Selecciona distrito' %>
                </div>
              </div>
              <div class='col-12 '>
                <div class='margin-top-30 contentButtons contentButtonsEnd'>
                  <%= f.submit 'Actualizar', class: 'button' %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


