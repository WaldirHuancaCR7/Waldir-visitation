<div class='container ProfilePage PageStudent' id='buttonStudent' >
  <div class='row'>
    <div class='col-md-4'>
      <%= render 'pages/left_menu_student', student: @student %>
    </div>
    <div class='col-md-8'>
      <div class="panel">
        <div class="panel-header">
          <p class="panel-header-title">Datos Universitarios</p>
        </div>
        <div class="panel-body">
          <%= form_for @student, url: profile_student_path, method: 'put' do |f|%>
            <%= f.hidden_field :lng, class: 'input', id: 'lngMap' %>
            <%= f.hidden_field :lat, class: 'input', id: 'latMap' %>
            <% if @student.errors.size > 0 %>
              <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <ul>
                  <% @student.errors.full_messages.each do |error| %>
                    <li><%= error %> </li>
                  <% end %>
                </ul>
              </div>
            <% end %>
            <div class='row'>
              <div class='col-md-6 col-sm-12 '>
                <div class="contentInput margin-top-15 ">
                  <label class="label">E.P:</label>
                  <%= f.select(:professional_school_id, @professional_schools, {include_blank: 'Seleccione escuela profesional'}, {class: 'input'} )%>
                </div>
              </div>
              <div class='col-md-6 col-sm-12'>
                <div class="contentInput margin-top-15 ">
                  <label class="label">Ciclo:</label>
                  <%= f.select(:study_cycle_id, @cyles,  {include_blank: 'Seleccione ciclo' }, {class: 'input'} )%>
                </div>
              </div>
              <div class='col-md-6 col-sm-12'>
                <div class="contentInput margin-top-15 ">
                  <label class="label">Grupo:</label>
                  <%= f.select(:study_group_id, @groups,  {include_blank: 'Seleccione grupo' }, {class: 'input'} )%>
                </div>
              </div>
              <div class='col-md-6 col-sm-12'>
                <div class="contentInput margin-top-15 ">
                  <label class="label">Religion:</label>
                  <%= f.select(:religion_id, @religions , {include_blank: 'Seleccione religión' }, {class: 'input'} )%>
                </div>
              </div>
              <div class='col-md-6 col-sm-12'>
                <div class="contentInput margin-top-15 ">
                  <label class="label">Escuela sabatica:</label>
                  <%= f.text_field :sabbath_school_class, class: 'input' %>
                </div>
              </div>
              <div class='col-md-6 col-sm-12'>
                <div class="contentInput margin-top-15 ">
                  <label class="label">Iglesia:</label>
                  <%= f.text_field :church, class: 'input' %>
                </div>
              </div>
              <div class='col-md-6 col-sm-12'>
                <div class="contentInput margin-top-15 ">
                  <label class="label">Direccion de la iglesia:</label>
                  <%= f.text_field :church_adresss, class: 'input' %>
                </div>
              </div>
              <div class='col-md-6 col-sm-12'>
                <div class="contentInput margin-top-15 ">
                  <label class="label">Bautizado:</label>
                  <%= f.check_box :baptized, class: 'input' %>
                </div>
              </div>
              <% if current_user.user_type == 'visitor'%>
                <div class='col-md-6 col-sm-12'>
                  <div class="contentInput margin-top-15 ">
                    <label class="label">Urgente:</label>
                    <%= f.check_box :urgent, class: 'input' %>
                  </div>
                </div>
              <% end %>
              <div class='col-sm-12'>
                <div class="contentInput margin-top-15 ">
                  <label class="label">Direccion:</label>
                  <%= f.text_field :address, class: 'input', id:'pac-input-autocomplete'%>
                </div>
              </div>
              <div class='col-sm-12'>
                <div class="contentInput margin-top-15 ">
                  <label class="label">Referencia:</label>
                  <%= f.text_field :reference, class: 'input' %>
                </div>
              </div>
            </div>
 
            <div class='col-sm-12'>
              <div class="contentInput margin-top-15">
                <input
                  type="text"
                  class="input inputIconContent"
                  id="pac-input"
                  placeholder="Busca tu dirección"
                  onkeypress="return noenter(event)"
                />
                <i class="fas fa-search inputIcon" ></i>
              </div>
              <div class='col-sm-12'>
                <div id='map2' style="width:100%;height:400px;" class='margin-top-15 map-search' ></div>
              </div>
              <div class='col-12 '>
                <div class='margin-top-30 contentButtons contentButtonsEnd'>
                  <%= f.submit 'Actualizar', class: 'button'  %>
                </div>
              </div>
            <% end %>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>